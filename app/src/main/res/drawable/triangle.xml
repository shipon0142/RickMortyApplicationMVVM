<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" />
        </shape>
    </item>

    <!-- Horizontal line -->
    <item android:left="16dp" android:right="16dp" android:top="50dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <!-- Vertical line -->
    <item android:left="50dp" android:right="0dp" android:top="16dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
</layer-list>
